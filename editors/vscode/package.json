{
  "name": "ferrous-owl",
  "displayName": "FerrousOwl VSCode",
  "description": "Visualize ownership and lifetimes in Rust",
  "version": "0.0.1",
  "author": "Willem Vanhulle <willemvanhulle@protonmail.com>",
  "publisher": "WillemVanhulle",
  "engines": {
    "vscode": "^1.104.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wvhulle/ferrous-owl.git"
  },
  "license": "MPL-2.0",
  "keywords": [
    "rust",
    "ownership",
    "lifetimes",
    "visualization"
  ],
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:rust"
  ],
  "contributes": {
    "commands": [
      {
        "command": "ferrous-owl.toggle",
        "title": "FerrousOwl: Toggle enabled/disabled"
      },
      {
        "command": "ferrous-owl.cycleDisplayMode",
        "title": "FerrousOwl: Cycle display mode"
      },
      {
        "command": "ferrous-owl.toggleOwnership",
        "title": "FerrousOwl: Toggle ownership diagnostics"
      },
      {
        "command": "ferrous-owl.analyze",
        "title": "FerrousOwl: Re-analyze workspace"
      },
      {
        "command": "ferrous-owl.update",
        "title": "FerrousOwl: Update server"
      },
      {
        "command": "ferrous-owl.restart",
        "title": "FerrousOwl: Restart server"
      }
    ],
    "configuration": {
      "title": "ferrous-owl",
      "properties": {
        "ferrous-owl.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the ferrous-owl executable. If empty, will download and use bundled version."
        },
        "ferrous-owl.underlineThickness": {
          "type": "string",
          "default": "2",
          "enum": [
            "1",
            "2",
            "3",
            "4"
          ],
          "description": "The stroke thickness of the underline line"
        },
        "ferrous-owl.lifetimeColor": {
          "type": "string",
          "default": "hsla(125, 80%, 60%, 0.6)",
          "description": "The color of the lifetime"
        },
        "ferrous-owl.moveCallColor": {
          "type": "string",
          "default": "hsla(35, 80%, 60%, 0.6)",
          "description": "The color of the move/call"
        },
        "ferrous-owl.immutableBorrowColor": {
          "type": "string",
          "default": "hsla(230, 80%, 60%, 0.6)",
          "description": "The color of the immutable borrow"
        },
        "ferrous-owl.mutableBorrowColor": {
          "type": "string",
          "default": "hsla(300, 80%, 60%, 0.6)",
          "description": "The color of the mutable borrow"
        },
        "ferrous-owl.outliveColor": {
          "type": "string",
          "default": "hsla(0, 80%, 60%, 0.6)",
          "description": "The color of the outlive"
        },
        "ferrous-owl.displayDelay": {
          "type": "number",
          "default": 500,
          "description": "Delay in displaying underlines (ms)"
        },
        "ferrous-owl.highlightBackground": {
          "type": "boolean",
          "default": false,
          "description": "Highlight text background instead of underline"
        },
        "ferrous-owl.displayMode": {
          "type": "string",
          "default": "selected",
          "enum": [
            "selected",
            "manual",
            "disabled"
          ],
          "enumDescriptions": [
            "Show ownership for the variable at the cursor selection (default)",
            "Only show ownership when manually triggered via command or code action",
            "Disable automatic ownership display"
          ],
          "description": "When to automatically show ownership underlines"
        }
      }
    }
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "pnpm run bundle",
    "compile": "tsc --noEmit && node esbuild.js",
    "watch": "node esbuild.js --watch",
    "bundle": "tsc --noEmit && eslint . && node esbuild.js --production",
    "lint": "eslint .",
    "fmt": "prettier -w .",
    "vsix": "vsce package --no-dependencies",
    "upload:vscode": "vsce publish --no-dependencies",
    "upload:ovsx": "ovsx publish --no-dependencies"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "ovsx": "^0.10.7",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vscode-languageserver-types": "^3.17.5"
  },
  "dependencies": {
    "semver-parser": "^4.1.8",
    "vscode-languageclient": "^9.0.1"
  }
}